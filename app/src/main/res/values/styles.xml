<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/blue_purple</item>
        <item name="colorPrimaryDark">@color/blue_purple_dark</item>
        <item name="colorAccent">@color/pink_hot</item>
        <item name="alertDialogStyle">@style/Dialog</item>
    </style>

    <style name="Hour">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="HourDivider">
        <item name="android:height">@dimen/calendar_day_hour_divider_height</item>
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="EventText">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="MonthDate">
        <item name="android:paddingTop">@dimen/margin_half</item>
        <item name="android:paddingBottom">@dimen/margin_half</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">?colorPrimary</item>
    </style>
    <style name="ButtonBar">
        <item name="android:background">?colorPrimaryDark</item>
        <item name="android:padding">@dimen/margin</item>
    </style>
    <style name="PrimaryButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">?colorAccent</item>
    </style>

</resources>
