<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Hour">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:paddingBottom">@dimen/hour_padding</item>
    </style>

    <style name="HourDivider">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:height">@dimen/calendar_day_hour_divider_height</item>
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="EventText">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="MonthDate">
        <item name="android:paddingTop">@dimen/margin_half</item>
        <item name="android:paddingBottom">@dimen/margin_half</item>
    </style>

</resources>
