<resources>
    <style name="CalendarTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="alertDialogTheme">@style/Dialog</item>
        <item name="android:alertDialogTheme">?alertDialogTheme</item>
        <item name="dialogTheme">?alertDialogTheme</item>
        <item name="android:dialogTheme">?alertDialogTheme</item>
    </style>

    <style name="Hour">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="HourDivider">
        <item name="android:height">@dimen/calendar_day_hour_divider_height</item>
        <item name="android:background">@color/grey_dark</item>
    </style>

    <style name="EventText">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="MonthDate">
        <item name="android:paddingTop">@dimen/margin_half</item>
        <item name="android:paddingBottom">@dimen/margin_half</item>
    </style>

    <style name="Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowTitleStyle">@style/DialogTitle</item>
        <item name="android:buttonStyle">@style/PrimaryButton</item>
        <!-- These both work and both do the same thing. -->
<!--        <item name="android:windowBackground">?colorPrimary</item>-->
<!--        <item name="android:background">?colorPrimary</item>-->
    </style>
    <style name="DialogTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ButtonBar">
        <item name="android:background">?colorPrimaryDark</item>
        <item name="android:padding">@dimen/margin</item>
    </style>
    <style name="PrimaryButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">?colorAccent</item>
    </style>

</resources>
